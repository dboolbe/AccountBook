<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mar/28/2014"
            android:id="@+id/list_transactions_date"
            android:layout_alignParentTop="true"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Nickname"
            android:id="@+id/list_transactions_nickname"
            android:layout_below="@+id/list_transactions_date"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/list_transactions_nickname"
            android:textSize="26dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"
            android:id="@+id/list_transactions_amount"
            android:layout_below="@+id/list_transactions_date"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_above="@+id/list_transactions_memo"
            android:gravity="bottom"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo"
            android:id="@+id/list_transactions_memo"
            android:layout_below="@+id/list_transactions_nickname"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
</RelativeLayout>